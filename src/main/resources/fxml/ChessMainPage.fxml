<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="438.0" prefWidth="710.0" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chess.controllers.ChessMainPageController">
   <right>


      <!-- Second half with VBox -->
      <VBox alignment="TOP_CENTER" prefHeight="408.0" prefWidth="357.0" spacing="10" styleClass="actif" BorderPane.alignment="CENTER">
         <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
            <children>
               <VBox alignment="TOP_CENTER" prefHeight="101.0" prefWidth="123.0">
                  <children>
                     <Button styleClass="actif">
                        <graphic>
                           <ImageView fitHeight="69.0" fitWidth="126.0">
                              <image>
                                 <Image url="@../img/nouvelle_partie.png" /> <!-- Ajout de l'image de nouvelle partie  -->
                              </image>
                           </ImageView>
                        </graphic></Button>
                  </children>
               </VBox>
               <VBox alignment="TOP_CENTER" prefHeight="101.0" prefWidth="116.0">
                  <children>
                     <Button mnemonicParsing="false" prefHeight="70.0" prefWidth="108.0" styleClass="onglet">
                        <graphic>
                           <ImageView>
                              <image>
                                 <Image url="@../img/logoPartieMenu.png" /> <!-- Ajout de l'image du menu de partie.  -->
                              </image>
                           </ImageView>
                        </graphic></Button>
                  </children>
               </VBox>
               <VBox alignment="TOP_CENTER" prefHeight="101.0" prefWidth="84.0">
                  <children>
                     <Button mnemonicParsing="false" styleClass="onglet">
                        <graphic>
                           <ImageView styleClass="onglet">
                              <image>
                                 <Image url="@../img/logoJoueurMenu.png" /> <!-- Ajout de l'image du menu du joueur.  -->
                              </image>
                           </ImageView>
                        </graphic></Button>
                  </children>
               </VBox>
            </children>
         </HBox>
         <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="40.0">
            <children>
               <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                  <children>
                     <ChoiceBox prefHeight="60.0" prefWidth="150.0" styleClass="selecteur" >
                        <items>
                           <FXCollections fx:factory="observableArrayList">
                              <String fx:value="5 min" />
                              <String fx:value="10 min" />
                              <String fx:value="20 min" />
                           </FXCollections>
                        </items>
                        <VBox.margin>
                           <Insets top="10.0" />
                        </VBox.margin>
                     </ChoiceBox>
                  </children>
               </VBox>
               <Button mnemonicParsing="false" prefHeight="58.0" prefWidth="285.0" styleClass="boutonJeuEnLigne" text="Jouer contre un ami" textFill="WHITE" onAction="#handleChangeScenePlayer">
                  <graphic>
                     <ImageView fitHeight="47.0" fitWidth="50.0">
                        <image>
                           <Image url="@../img/LogoJoueur.png" />
                        </image>
                     </ImageView>
                  </graphic></Button>
               <Button mnemonicParsing="false" prefHeight="58.0" prefWidth="285.0" styleClass="boutonJeuEnLigne" text="Jouer contre l'ordinateur" textFill="WHITE" onAction="#handleChangeSceneBot">
                  <graphic>
                     <ImageView fitHeight="45.0" fitWidth="40.0">
                        <image>
                           <Image url="@../img/LogoRobot.png" />
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
               <Button mnemonicParsing="false" prefHeight="63.0" prefWidth="217.0" style="-fx-background-color: #1f1d1b;" text="Tournois" textFill="WHITE">
                  <graphic>
                     <ImageView fitHeight="40.0" fitWidth="40.0">
                        <image>
                           <Image url="@../img/Logo_Tournois.png" /> <!-- Ajout de l'image du tournoi. -->
                        </image>
                     </ImageView>
                  </graphic>
               </Button>
            </children>
         </VBox>


         <!-- Ici, il s'agit de la mise en place des statistiques présentes au bas de la page.  -->
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                  <children>
                     <Label styleClass="statsChiffres" text="144328" textFill="WHITE" />
                     <Label styleClass="statsLabel" text="JOUENT" textFill="WHITE" />
                  </children>
               </HBox>
               <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                  <children>
                     <Label styleClass="statsChiffres" text="13459965" textFill="WHITE" />
                     <Label styleClass="statsLabel" text="PARTIES" textFill="WHITE" />
                  </children>
               </HBox>
            </children>
         </HBox>
      </VBox>
   </right>
   <left>
      <!-- Ici, il s'agit de la création de la bannière de l'adversaire. -->
      <VBox prefHeight="420.0" prefWidth="336.0" styleClass="onglet" BorderPane.alignment="CENTER_LEFT">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="73.0" prefWidth="290.0" spacing="10.0">
               <children>
                  <ImageView fitHeight="55.0" fitWidth="55.0">
                     <image>
                        <Image url="@../img/adversaire_img.png" />
                     </image>
                  </ImageView>
                  <Label text="Adversaire" textFill="WHITE" />
               </children>
               <VBox.margin>
                  <Insets bottom="3.0" left="5.0" top="3.0" />
               </VBox.margin>
            </HBox>
            <!-- Création du tableau contenant la grille à gauche. -->
            <HBox prefHeight="258.0" prefWidth="316.0">
               <children>
                  <StackPane prefHeight="263.0" prefWidth="344.0">
                     <children>
                        <ImageView fitHeight="320.0" fitWidth="341.0">
                           <image>
                              <Image url="@../img/plateau.png" />
                           </image>
                           <StackPane.margin>
                              <Insets left="15.0" right="15.0" />
                           </StackPane.margin>
                        </ImageView>
                        <GridPane id="gridPane" prefHeight="310.0" prefWidth="323.0">
                           <columnConstraints>
                              <ColumnConstraints maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
                              <ColumnConstraints maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
                              <ColumnConstraints maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
                              <ColumnConstraints maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
                              <ColumnConstraints maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
                              <ColumnConstraints maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
                              <ColumnConstraints maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
                              <ColumnConstraints maxWidth="40.0" minWidth="40.0" prefWidth="40.0" />
                           </columnConstraints>
                           <rowConstraints>
                              <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" />
                              <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" />
                              <RowConstraints maxHeight="40.0" minHeight="40.0" prefHeight="40.0" />
                              <RowConstraints maxHeight="40" minHeight="6.0" prefHeight="40" />
                              <RowConstraints maxHeight="40.0" minHeight="6.0" prefHeight="40" />
                              <RowConstraints maxHeight="40" minHeight="6" prefHeight="40" />
                              <RowConstraints maxHeight="40" minHeight="6" prefHeight="40" />
                              <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="40" />
                           </rowConstraints>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <StackPane.margin>
                              <Insets bottom="-5.0" left="30.0" right="30.0" top="-5.0" />
                           </StackPane.margin>
                        </GridPane>
                     </children>
                  </StackPane>
               </children>
            </HBox>
            <!-- Création de la bannière du joueur.  -->
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <ImageView fitHeight="55.0" fitWidth="55.0">
                     <image>
                        <Image url="@../img/pdp_blanc.png" />
                     </image>
                  </ImageView>
                  <Label prefHeight="16.0" prefWidth="112.0" text="Nom choisi" textFill="WHITE" />
               </children>
               <VBox.margin>
                  <Insets bottom="3.0" left="5.0" top="3.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </left>
</BorderPane>
